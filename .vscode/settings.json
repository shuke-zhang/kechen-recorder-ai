{
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,
  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "files.associations": {
    "*.json": "jsonc"
  },
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "cSpell.words": [
    "AIMODELTYPE",
    "Attributify",
    "autoscan",
    "bumpp",
    "Dbmz",
    "dcloudio",
    "deepseek",
    "doubao",
    "easycom",
    "encryptor",
    "esno",
    "fasong",
    "flattendeep",
    "getphonenumber",
    "iconify",
    "idcard",
    "jsencrypt",
    "kechen",
    "keyboardheightchange",
    "kezai",
    "kuaishou",
    "loadding",
    "phonenumber",
    "projectname",
    "questionrecord",
    "quickapp",
    "qwen",
    "reclog",
    "recwave",
    "Refresherabort",
    "Refresherpulling",
    "Refresherrefresh",
    "Refresherrestore",
    "Renderjs",
    "reqid",
    "scalerecord",
    "Scrolltolower",
    "stime",
    "tabbar",
    "toutiao",
    "unocss",
    "unplugin",
    "uuidv",
    "VHNS",
    "VITE",
    "WEIXIN",
    "wgtu",
    "wpgs",
    "xfyun",
    "xunfei",
    "zhipu"
  ],
  "i18n-ally.localesPaths": [
    "src/components/Recorder-UniCore/i18n",
    "src/utils/Recorder-UniCore/i18n"
  ]
}
